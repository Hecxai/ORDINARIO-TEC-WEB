@model IEnumerable<ORDINARIO_TEC_WEB.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de productos</h1>

<p>
    <a asp-action="Create">Crear nuevo producto</a>
</p>

<div class="row row-cols-1 row-cols-md-3 g-4">
@foreach (var item in Model) {
        <div class="col">
        <div class="card text-white bg-success" style="max-width: 19rem;">
            <img src="https://mdbcdn.b-cdn.net/img/new/standard/city/041.webp" class="card-img-top" alt="...">
             <div class="card-body">
            <h5 class="card-title">
                @Html.DisplayFor(modelItem => item.NombreProd)
            </h5>
            <h6>
                @Html.DisplayFor(modelItem => item.PrecioProd)
            </h6>
            <h6>
                @Html.DisplayFor(modelItem => item.StockProd)
            </h6>
            <h6>
                @Html.DisplayFor(modelItem => item.DescripcionProd)
            </h6>
            </div>
             <div class="card-body">
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdProd">Editar</a> |
                <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.IdProd">Detalles</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProd">Eliminar</a>
            </div>
        </div>
        </div>
}
</div>